<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <TextView
        android:id="@+id/tv_User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="TextView"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_changeable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/blank1"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/ibtn_hobbies"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_User" />

    <ImageButton
        android:id="@+id/ibtn_Friends"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="20dp"
        android:onClick="buttonClickFriends"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/ibtn_LMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/amikos" />

    <ImageButton
        android:id="@+id/ibtn_LMessage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="24dp"
        android:onClick="buttonClickLeaveMessage"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/chat" />

    <ImageButton
        android:id="@+id/ibtn_hobbies"
        android:layout_width="211dp"
        android:layout_height="150dp"
        android:onClick="buttonClickHobbies"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/ibtn_Friends"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_User"
        app:layout_constraintVertical_bias="0.868"
        app:srcCompat="@drawable/runfores" />

</androidx.constraintlayout.widget.ConstraintLayout>